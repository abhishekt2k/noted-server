            </ul>
        </div>
    </nav>
    <div class="box">
        <div class="box-body">
            <form action="/notes/<%= note._id %>?_method=PUT" method="POST">


                <div class="text-title">
                    <textarea style="overflow:auto" class="form-control" rows="1" cols="100" id="title"
                        name="editnote[title]" placeholder="Title"> <%= note.title %></textarea>

                    </textarea>
                </div>

                <div class="text-area">
                    <textarea class="form-control" name="editnote[body]" rows="25" cols="175" id="body">
<%= note.body %>
                </textarea>
                </div>
                <div class="bar">
                    <!--  <button class="leftbtn" id="remove-btn" onclick="goback();">
                    <span class="glyphicon glyphicon-remove"></span>
                </button> -->
                    <button class="rightbtn" id="save-btn" type="submit">
                        <span class="glyphicon glyphicon-ok"></span>
                    </button> <br>
                </div>
            </form>
        </div>




